---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

// export const prerender = false;

// Número de posts por página
const postsPerPage = 5;

// Carga y ordena los posts por fecha de publicación
const allPosts = (await getCollection('blog')).sort(
    (a : any, b: any) => b.data.pubDate - a.data.pubDate
);

// Función para obtener los posts de la página actual

function getPostsForPage(pageNumber: number) {
    const startIndex = (pageNumber - 1) * postsPerPage;
    const endIndex = startIndex + postsPerPage;
	return allPosts.slice(startIndex, endIndex);

}

// Función para calcular el número total de páginas
function getTotalPages() {
    return Math.ceil(allPosts.length / postsPerPage);
}

const pag = Astro.url.searchParams.get('page');// Página actual de la URL
const currentPage = pag ? parseInt(pag) : 0;
const totalPages = getTotalPages();
const posts = getPostsForPage(currentPage);
const nextPage = currentPage < totalPages ? currentPage + 1: null;
const prevPage = currentPage > 1 ? currentPage - 1: null;

---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}

			nav { 
				    padding-top: 2rem;
					text-align: center;
					& a {
						
						text-decoration: none;
						border: 2px solid blue;
						padding: 3px;
						border-radius: 5px;
						margin-left: 1rem;
						margin-right: 1rem;						
					}
				}

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
				
			}

		</style>
	
    </head>
    <body>
        <Header />
        <main>
            <section>
                <ul>
                    {
					
						posts.map((post) => (
                        <li>
                            <a href={`/astroblog/blog/${post.slug}/`}>
									<Image

										src={post.data.heroImage || ''}
										loading="lazy"
										width="720"
										height="360"
										alt=""

									/>

										<h4 class="title">{post.data.title}</h4>
										<p class="date">
									<FormattedDate date={post.data.pubDate} author={post.data.author}/>
									</p>
								</a>
                        </li>
                    ))
					
					}
                </ul>
            </section>
			
                {/* Controles de paginación */}
                <nav>
					
                        {prevPage && (

								<a href={`?page=${1}`}>
                                    Primera Página
                                </a>
                                <a href={`?page=${prevPage}`}>
                                    Página Anterior
                                </a>
                        
                        )}
                        {nextPage && (
							
                                <a href={`?page=${nextPage}`}>
                                    Página Siguiente
                                </a>
								<a href={`?page=${totalPages}`}>
                                    Ultimo Página
                                </a>							
                        )}

                </nav>
            
        </main>
        <Footer />
    </body>
</html>
